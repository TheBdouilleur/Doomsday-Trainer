WindowManager:
    StartWindow:
    DateWindow:
    ResultWindow:


<StartWindow>:
    name: "first"

    GridLayout:
        rows:2
        Label:
            text: "Day from date trainer.\nAre you sure you want to play?"
            font_size: 25

        GridLayout:
            cols: 2

            Button:
                text:"Quit app"
                font_size: 30
                on_release: quit()
            Button:
                text:"Confirm"
                font_size: 30
                on_release:
                    print("confirm")
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
                


<DateWindow>:
    name: "second"

    GridLayout:
        rows: 2

        Label:
            text: "What day was {} on?".format(app.random_date)
            font_size: 30
            on_parent: print('loaded')

        GridLayout:
            cols: 2

            TextInput:
                id: answer
                multiline: False
                font_size: 30
                on_text_validate:
                    app.answer = answer.text
                    app.get_answer()
                    app.root.current = "third"
                    root.manager.transition.direction = "left"
            
            Button:
                text:"OK"
                font_size: 30
                on_release:
                    app.answer = answer.text
                    app.get_answer()
                    app.root.current = "third"
                    root.manager.transition.direction = "left"


<ResultWindow>:
    name: "third"
    on_enter: app.reload_label()
    GridLayout:
        id: layout
        rows: 2

        Label:
            id: resultLabel
            text: app.results

        GridLayout:
            cols: 2

            Button:
                text: "Play again"
                font_size: 30
                on_release:
                    app.root.current = "second"
                    root.manager.transition.direction = "right"

            Button:
                text:"Quit"
                font_size: 30
                on_release:
                    quit()

            

            